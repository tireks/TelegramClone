<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.EnterPhoneNumFragment">

    <EditText
        android:hint="@string/auth_phone_editText_hint"
        android:id="@+id/auth_input_phoneNum_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/auth_edit_ext" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/auth_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_auth_next2"
        android:backgroundTint="@color/material_drawer_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/app_margin"
        android:contentDescription="@string/cd_auth_btn_next" />

</androidx.constraintlayout.widget.ConstraintLayout>