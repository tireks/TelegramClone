<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settingsAccButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/material_drawer_primary_text</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/material_drawer_secondary_text</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <style name="dividerLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/material_drawer_divider</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <style name="mainToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="auth_edit_ext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/material_drawer_primary_text</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/material_settings_menu_color</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/material_drawer_primary_text</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/material_settings_menu_color</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="Sample_Button">
        <item name="android:background">@color/purpleSolid</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>